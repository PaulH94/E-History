{
  "manifest_version": 2,

  "name": "One-click History",
  "description": "This extension will delete the last hour of history.",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "hplug.html"
  },
  "permissions": [
    "history",
    "tabs",
    "activeTab",
    "http://www.google.com/"
  ],
  "background": {
    "scripts": ["background.js"]
  }
}
